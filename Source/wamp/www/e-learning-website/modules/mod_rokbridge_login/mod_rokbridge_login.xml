<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>RokBridge Login</name>
	<author>RocketTheme, LLC</author>
	<creationDate>November 5, 2010</creationDate>
	<authorEmail>support@rockettheme.com</authorEmail>
	<authorUrl>http://www.rockettheme.com</authorUrl>
	<copyright>(C) 2005 - 2010 RocketTheme, LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>1.0-RC14</version>
	<description>RokBridge Login is a specialized version of the Joomla! login module.  As well as the standard login features, it also shows phpbb3 avatar and some other phpbb3 details.</description>
	<files>
		<filename module="mod_rokbridge_login">mod_rokbridge_login.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_rokbridge_login.ini</language>
	</languages>
	<params>
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="0">Never</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" />
		<param name="pretext" type="textarea" cols="30" rows="5" default="" label="Pre-text" />
		<param name="login" type="menuitem" default="" disable="separator" label="Login Redirection URL" />
		<param name="logout" type="menuitem" default="" disable="separator" label="Logout Redirection URL"  />
		<param name="name" type="list" default="0" label="Name/Username">
			<option value="0">Username</option>
			<option value="1">Name</option>
		</param>
		<param name="autoremember" type="radio" default="0" label="Auto Remember" description="Automatically Remember login credentials">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="usesecure" type="radio" default="0" label="Encrypt Login Form" description="Submit encrypted login data (requires SSL)">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="avatar" type="radio" default="1" label="Show Avatar">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="avatar_size" type="text" default="55" size="3" label="Avatar size in px" />
		<param name="show_default_avatar" type="radio" default="1" label="Show Default Avatar">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="default_avatar" type="text" default="modules/mod_rokbridge_login/assets/default-avatar.png" size="50" label="Default Avatar" description="Default avatar to use if user has no avatar" />
		<param name="greeting" type="radio" default="1" label="Show Greeting">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="messages" type="radio" default="1" label="Show Messages Link">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="lastvisit" type="radio" default="1" label="Show Last Visit">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="unanswered" type="radio" default="1" label="Show Unanswered Posts">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="new" type="radio" default="1" label="Show New Posts">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="active" type="radio" default="1" label="Show Active Posts">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="yours" type="radio" default="1" label="Show Your Posts">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
